<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order: añadir campos en formulario y columnas en líneas -->
    <record id="view_purchase_order_form_inherit_sid_extra_fields" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.sid_purchase_extra_fields</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Insertar campos del pedido en la pestaña "Other Information" -->
            <xpath expr="//page[@name='other_info']/group" position="inside">
                <group string="Campos extra SIDSA" col="4">
                    <field name="x_date_planned" readonly="1"/>
                    <field name="x_order_id_purchase_order_line_count" readonly="1"/>
                    <field name="x_parcial"/>
                    <field name="x_regularizado"/>
                    <field name="x_pendiente" readonly="1"/>
                    <field name="x_total" readonly="1"/>
                </group>
            </xpath>

            <!-- Añadir columnas a la lista de líneas dentro del pedido -->
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="x_hs_code_po_line" optional="show"/>
                <field name="x_invoice" optional="show"/>
                <field name="x_pendiente" optional="show"/>
                <field name="x_pais" optional="hide"/>
                <field name="x_qty_inv_sale" optional="hide"/>
                <field name="x_sale_date" optional="hide"/>
                <field name="x_unit_weight_po_line" optional="hide"/>
                <field name="x_weight_subtotal" optional="show"/>
                <field name="x_retraso" optional="hide" readonly="1"/>
                <field name="x_unit_price_difference" optional="hide" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
