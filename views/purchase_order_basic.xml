<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order: añadir campos en formulario y columnas en líneas -->
    <record id="view_purchase_order_form_inherit_sid_extra_fields" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.sid_purchase_extra_fields</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Insertar campos del pedido en la pestaña "Other Information" -->
            <xpath expr="//sheet//group" position="inside">
                <group string="Contabilidad" col="4" groups="account.group_account_manager">
                    <field name="amount_untaxed_pending" readonly="1" groups="account.group_account_manager"/>
                    <field name="amount_untaxed_total" readonly="1" groups="account.group_account_manager"/>
                </group>
            </xpath>

            <!-- Añadir columnas a la lista de líneas dentro del pedido -->
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="sid_hs_code_po_line" optional="show"/>
                <field name="sid_invoice" optional="show"/>
                <field name="pending_line" optional="show"/>
                <field name="supplier_country" optional="hide"/>
                <field name="sid_qty_inv_sale" optional="hide"/>
                <field name="sid_sale_date" optional="hide"/>
                <field name="sid_unit_weight_po_line" optional="hide"/>
                <field name="sid_weight_subtotal" optional="show"/>
                <field name="sid_po_line_delay" optional="show"/>
                <field name="sid_unit_price_difference" optional="hide"/>
            </xpath>

            <!-- Líneas: permitir wrap en la descripción (name) -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="attributes">
                <attribute name="class">sid_wrap_2lines</attribute>
            </xpath>
        </field>
    </record>
</odoo>
